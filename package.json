{
  "name": "delivery-bun-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run services:up && bun --watch src/http/server.ts",
    "services:up": "docker compose -f infra/compose.yml up -d",
    "services:stop": "docker compose -f infra/compose.yml stop",
    "services:down": "docker compose -f infra/compose.yml down",
    "build": "bun build src/http/server.ts --target=bun --outdir ./dist",
    "start": "NODE_ENV=production bun src/http/server.js",
    "test": "bun test",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^3.3.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  }
}